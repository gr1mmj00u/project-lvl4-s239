extends /layouts/application.pug

block content
  .form-signup
    h1.h3.mb-3.font-weight-normal Sign up
    +formFor(f, { url: urlFor('user'), method: 'post' })
        +input(f, 'email', { label: 'Email' })
        +input(f, 'firstName', { label: 'First name'})
        +input(f, 'lastName', { label: 'Last name'})
        +input(f, 'password', { as: 'password', label: 'Password'})
        +button(f, 'submit', { value: 'Create' })
