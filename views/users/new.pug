extends /layouts/application.pug

block content
  .mx-auto.border.rounded.p-3.col-sm-4
    h1.text-center.mb-3.font-weight-normal Sign up
    +formFor(f, { url: urlFor('users'), method: 'post' })
        +input(f, 'email', { label: 'Email', required: true })
        +input(f, 'firstName', { label: 'First name', required: true })
        +input(f, 'lastName', { label: 'Last name', required: true })
        +input(f, 'password', { as: 'password', label: 'Password', required: true })
        .clearfix.form-group
          .float-right
            +button(f, 'submit', { value: 'Create' })
