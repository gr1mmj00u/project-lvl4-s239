extends /layouts/application.pug

block content
  .container.form-signin
    h1.h3.mb-3.font-weight-normal Please sign in
    +formFor(f, { url: urlFor('session'), method: 'post' })
      +input(f, 'email', { label: 'Email' })
      +input(f, 'password', { as: 'password' ,label: 'Password'})
      +button(f)
